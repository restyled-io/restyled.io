<main>
  <h1>Admin/Jobs

<section>
  <table>
    <thead>
      <tr>
        <th>Id
        <th>Repo
        <th>Duration
        <th>Result

    <tbody>
      $forall Entity jid job <- jobs
        <tr>
          <td>#{toPathPiece jid}
          <td>#{toPathPart $ jobOwner job}/#{toPathPart $ jobRepo job}
          <td>
            $maybe x <- jobCompletedAt job
              #{prettyDuration (jobCreatedAt job) x}
          <td>
            $if jobExitCode job == Just 0
              âœ“
            $else
              $maybe x <- jobExitCode job
                <pre>Exit code: #{show x}
              $maybe x <- jobStdout job
                <pre>#{x}
              $maybe x <- jobStderr job
                <pre>#{x}
